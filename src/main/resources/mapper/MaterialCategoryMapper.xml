<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.d1m.wechat.mapper.MaterialCategoryMapper">

    <insert id="add" parameterType="com.d1m.wechat.model.MaterialCategory" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" order="BEFORE" resultType="java.lang.String">
            select UUID()
        </selectKey>
        insert into material_category(
        `id`,
        `name`,
        `deleted`,
        `wechat_id`,
        `created_at`,
        `created_by`,
        `laste_updated_at`,
        `laste_updated_by`        )
        values(
        #{id},
        #{name},
        #{deleted},
        #{wechatId},
        #{createdAt},
        #{createdBy},
        #{lasteUpdatedAt},
        #{lasteUpdatedBy}         )
    </insert>

    <select id="queryObject" resultType="com.d1m.wechat.model.MaterialCategory">
		select
			`id`,
			`name`,
			`deleted`,
			`wechat_id`,
			`created_at`,
			`created_by`,
			`laste_updated_at`,
			`laste_updated_by`
		from material_category
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.d1m.wechat.model.MaterialCategory">
        SELECT
        `id`,
        `name`,
        `deleted`,
        `wechat_id`,
        `created_at`,
        `created_by`,
        `laste_updated_at`,
        `laste_updated_by`,
        SUM(
        ( SELECT count( t.material_category_id ) FROM material t WHERE m.id = t.material_category_id and t.status=1) + ( SELECT count( d.material_category_id ) FROM dcrm_image_text_detail d WHERE m.id = d.material_category_id and d.status=1)
        ) newsCount
        FROM material_category m
        WHERE 1=1
        <if test="name != null">
            AND m.name = #{name}
        </if>
        GROUP BY m.id
        <choose>
            <when test="sidx != null">
                order by m.${sidx} ${order}
            </when>
            <otherwise>
                order by m.created_at desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <update id="update" parameterType="com.d1m.wechat.model.MaterialCategory">
        update material_category
        <set>
            <if test="id != null">`id` = #{id},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="deleted != null">`deleted` = #{deleted},</if>
            <if test="wechatId != null">`wechat_id` = #{wechatId},</if>
            <if test="createdAt != null">`created_at` = #{createdAt},</if>
            <if test="createdBy != null">`created_by` = #{createdBy},</if>
            <if test="lasteUpdatedAt != null">`laste_updated_at` = #{lasteUpdatedAt},</if>
            <if test="lasteUpdatedBy != null">`laste_updated_by` = #{lasteUpdatedBy}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="del">
        delete from material_category where id =#{id}
    </delete>
</mapper>