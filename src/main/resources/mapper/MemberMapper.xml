        select distinct m.id, m.head_img_url, m.nickname, m.subscribe_at, m.sex, m.country, m.province, m.city,
        m.activity,
        (select count(*) from conversation where member_id = m.id and direction = 0) as msgReplyNum,(select count(*)
        from member_click_menu where member_id = m.id) as menuClickNum from member as m
        <where>
            m.wechat_id = #{wechatId}
            <if test="start != null">
                <if test="end != null">
                    and m.created_at between #{start} and #{end}
