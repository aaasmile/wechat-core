    <select id="getConversationCount" resultType="int">
		SELECT
			sum(t.a)
		FROM
			(
				(
					SELECT
						count(1) AS a
					FROM
						conversation
					WHERE
						member_id = #{memberId}
				)
				UNION ALL
					(
						SELECT
							count(1) AS a
						FROM
							mass_conversation
						WHERE
							member_id = #{memberId}
					)
			) AS t
	</select>

